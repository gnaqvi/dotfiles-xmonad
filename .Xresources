! Cursor theme
Xcursor.theme: Pulse-Glass
Xcursor.size: 48

!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth: 32
URxvt*.transparent: false
!URxvt.fading: 0
URxvt.urgentOnBell: true
URxvt.visualBell: false
URxvt.loginShell: true
URxvt.saveLines: 500
URxvt.lineSpace: 1

! Padding
URxvt.internalBorder:10
URxvt.externalBorder:02

! Font
URxvt.font: xft:Inconsolata:size=12:style=Regular
URxvt.boldfont: xft:Inconsolata:size=12:style=Bold

! Scrollbar
URxvt.scrollBar: False
Urxvt.secondaryScroll: true

! Input Method
URxvt.preeditType: Root
URxvt.inputMethod: fcitx

! Perl extensions
URxvt.perl-ext-common: default,matcher
URxvt.matcher.button: 1
URxvt.urlLauncher: firefox

! Commands
!! ---- ctrl+F12 --> clean screen and scroll-bar
URxvt.keysym.Control-F12: command:\033c

! Tabs
!URxvt.perl-ext-common: tabbed
!URxvt.tabbed.tabbar-fg: 8
!URxvt.tabbed.tabbar-bg: 11
!URxvt.tabbed.tab-fg: 11
!URxvt.tabbed.tab-bg: 8

! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: true

! Pointer
URxvt.pointerBlank: false

! Colours
URxvt.background: [92]#002b36
URxvt.foreground: #657b83
!URxvt.foreground: #ffffff
URxvt.fadeColor: #002b36

! ANSI colours
! black
URxvt.color0: #073642
URxvt.color8: #002636
! red
URxvt.color1: #dc322f
URxvt.color9: #cb4b16
! green
URxvt.color2: #008604
URxvt.color10: #586e75
! yellow
URxvt.color3: #fadc11
URxvt.color11: #fadc11
! blue
URxvt.color4: #268bd2
URxvt.color12: #839496
! magenta
URxvt.color5: #d33682
URxvt.color13: #6c71c4
! cyan
URxvt.color6: #2aa198
URxvt.color14: #93a1a1
! white
URxvt.color7: #eee8d5
URxvt.color15: #fdf6e3
